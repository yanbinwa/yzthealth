/*重置*/
*{padding:0;margin:0}
a{color:#555;text-decoration:none;outline:none}
a:hover{color:#3fa9f5}
a{blr:expression(this.onFocus=this.blur())}
ul{list-style:none}
h4,h3,h2,h1{font-weight:normal}
img{border:none;max-width:100%}
/*结构*/
body {font: normal 100% "微软雅黑", Helvetica, Arial, sans-serif;background: #E6E6E6}
@media screen and (min-width: 240px) {
	body{font-size:20%}
}
@media screen and (min-width: 320px) {
	body{font-size:30%}
	.qbtnbox .qbtn{height: 7em;line-height: 7em}
}
@media screen and (min-width: 480px) {
	body{font-size:45%}
	.qbtnbox .qbtn{height: 10em;line-height: 10em}
}
@media screen and (min-width: 640px) {
	body{font-size:55%}
	.qbtnbox .qbtn{height: 12em;line-height: 12em}

}
@media screen and (min-width: 720px) {
	body{font-size:65%}
	.qbtnbox .qbtn{height: 13em;line-height: 13em}
}
@media screen and (min-width: 1080px) {
	body{font-size:100%}
	.qbtnbox .qbtn{height: 14em;line-height: 14em}
}
#cntbox{
	width:100%;
	min-height:100%;
	display: none;
}
.content{
	padding:1.25em;
}
.focus{
	margin-bottom: 1.25em;
	overflow: auto;
}
.focus a{
	display: block;
	float: left;
	width:100%
}
.focus img{
	width:100%;
	float:left;
}
.qbtnbox{
	overflow: auto;
}
.qbtn{
	display: inline-block;
	float: left;
	width: 50%;
	height: 14em;
	line-height: 14em;
	margin-bottom:1.25em;
}
.qbtn1{background: #93CAF0 url(/media/images/wifi/homebtn.svg) no-repeat}
.qbtn2{background: #F09393 url(/media/images/wifi/groupbtn.svg) no-repeat}
.qbtn3{background: #F7D64D url(/media/images/wifi/lbsbtn.svg) no-repeat}
.qbtn4{background: #AAE68F url(/media/images/wifi/tuibtn.svg) no-repeat}
.qbtn a{
	font-size: 3.75em;
	color: #fff;
	padding:1em 0 1em 3.75em;
}
.tuisub{
	background: #f2f2f2;
	width:94%;
	padding:3%;
	margin-bottom:1.5em
}
.tuisub h3{font-size:3em}
.tuisub p{font-size:2em;color:#999}
#topbar{
	position:fixed;
	bottom:-15em;
	height:15em;
	width:100%;
	opacity: 0.95;
}
.mohelogo{
	height: 4.0625em;
	text-align: center;
}
.mohelogo a{
	display:inline-block;
	height: 100%;
	width:24.5em;
	background:url(/media/images/wifi/mohelogo.svg) no-repeat;
}
.mohelogo a.on{background:url(/media/images/wifi/jiantou.svg) no-repeat;}
.ftnav{
	padding: 1em 0 0.75em;
	height: 9.1875em;
	background:#fff;
	line-height: 9.1875em;
}
.ftnav li{
	float:left;
	display:inline-block;
	width: 30%;
	text-align:center;
}
.ftnav li.lgbtn{
	width:40%;
}
.ftnav li.lgbtn a{
	background: #3FA9F5;
	font-size: 4em;
	color: #fff;
	border-radius: 3em;
}
.ftnav li.ucnt{
	float:right;
}
.ftnav li a{
	font-size: 3.1em;
	display: inline-block;
	height: 100%;
	width: 100%;
}


.loginbox{height:36em;width:100%;background:#fff}
.loginbox h3{font-size:400%;text-align:center;padding-top:1em;color:#ccc}
.logintyp{padding-top:1em;margin:0 auto;width:95%;overflow:auto}
.logintyp li{float:left;width:20%;text-align:center;font-size:200%}